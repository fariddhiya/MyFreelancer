<% if resource.errors.any? %>
  <script>
    <% resource.errors.full_messages.each do |message| %>
     new Noty ({ 
        type: 'error', 
        layout: 'topRight', 
        text: '<%= message %>', 
        timeout: 2000, 
        progressBar: true,
        theme: "sunset"
      }).show();
    <% end %>
  </script>
<% end %>
