<% unless flash.empty? %>
  <script>
    <% flash.each do |key, value| %>
      <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
      new Noty ({ 
        type: '<%= type %>', 
        layout: 'topRight', 
        text: '<%= value %>', 
        timeout: 2000, 
        progressBar: true,
        theme: "sunset"
      }).show();
    <% end %>
  </script>
<% end %>