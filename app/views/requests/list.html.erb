<section class="section">
  <div class="container">
    <p class="title">
      All Request 
      <%= link_to 'Post a request', new_request_path, class: "button is-primary is-pulled-right" %>
    </p>
    <div class="card">
      <div class="card-header">
        <%= form_tag '', method: :get do %>
          <div class="field p-10">
            <div class="select">
              <%= select_tag 'category', content_tag(:option, 'All Category', value: "") +
                          options_for_select(@categories.map { |c| [c.name, c.id] }, selected: @category_id), onchange: "this.form.submit();" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="card-content">
      </div>
    </div>
  </div>
</section>